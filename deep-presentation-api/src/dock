# Use the official Alpine Linux image as a base
FROM alpine:3.18

# Set environment variables to ensure proper Python buffering
ENV PYTHONUNBUFFERED=1

# Set the working directory
WORKDIR /app

# Update packages and install necessary dependencies (ffmpeg, python3, etc.)
RUN apk add --no-cache \
    ffmpeg \
    python3 \
    py3-pip \
    python3-dev \
    musl-dev \
    libffi-dev \
    gcc \
    make \
    && python3 -m ensurepip \
    && pip3 install --upgrade pip \
    && apk add --no-cache bash  # In case you need bash for some scripts

# Create a virtual environment
RUN python3 -m venv venv

# Activate the virtual environment
ENV PATH="/app/venv/bin:$PATH"

# Copy the requirements file (if you have one)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
COPY . .

# Apply cron job and set the entry point command
CMD ["python3", "src/main.py"]